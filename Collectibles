import java.awt.image.BufferedImage;
import javax.swing.*;
import java.awt.*;
import java.io.*;
import javax.imageio.*;
import java.awt.image.*;

import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.Toolkit;


public class Collectibles{
  
  //x and y of the collectible
  private int x = 0;
  private int y = 0;
  private int width = 32;
  private int height = 32;
  
  
  //holds what the item type is
  private int collectibleType = 0;
  
  
  //tells you if the collectible is picked up
  private boolean pickedUp = false;
  
  
  public Collectibles(int collectibleType, int x, int y, Game gd){
    this.collectibleType = collectibleType;
    this.x = x;
    this.y= y;
  }

  
  
  
 // @Override
public void paint(Graphics g){
    Graphics2D g2 = (Graphics2D) g;
    Image collectible = Toolkit.getDefaultToolkit().getImage("GraveDigger.png");
    if (xa == -1) g2.drawImage(collectible, x,y-height,width,height, null); //left facing sprite is "default sprite"
    else g2.drawImage(collectible, x+width,y-height,-width,height, null); //flipped left sprite
  }
}
    
    
    
  
  
  }
  
  
  
  
  
  
}
