public class Collectibles{
  
  //x and y of the collectible
  private int x = 0;
  private int y = 0;
  private int width = 32;
  private int height = 32;
  private Image collectibles;

  private boolean pickedUp = false;

  
  public Collectibles(int x, int y, Game gd){
    this.x=x;
    this.y=y;
    collectibles = Toolkit.getDefaultToolkit().getImage("coinbag.png");
  }

  
  
  
 // @Override
public void paint(Graphics g){
    Graphics2D g2 = (Graphics2D) g;
    
    if (pickedUp == false) g2.drawImage(collectibles, x,y-height,width,height, null); 
   
}

public void setPickedUp() {
  pickedUp = true;
}
}